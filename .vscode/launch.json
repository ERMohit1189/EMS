{
    "version": "0.2.0",
    "configurations": [
    
        {
            "type": "pwa-node",
            "request": "launch",
            "name": "Launch Backend (tsx)",
            "cwd": "${workspaceFolder}",
            "runtimeExecutable": "node",
            "runtimeArgs": ["--inspect=9229", "./node_modules/tsx/dist/cli.cjs", "server/index.ts"],
            "env": {
                "NODE_ENV": "development",
                "PORT": "5000"
            },
            "console": "integratedTerminal",
            "sourceMaps": true,
            "outputCapture": "std",
            "skipFiles": ["<node_internals>/**"]
        },
        {
            "type": "pwa-chrome",
            "request": "launch",
            "name": "Launch Client (Vite + Chrome)",
            "url": "http://localhost:5173",
            "webRoot": "${workspaceFolder}/client",
            "preLaunchTask": "npm: dev:client",
            "sourceMaps": true,
            "runtimeArgs": ["--remote-debugging-port=9222"],
            "breakOnLoad": false
        },
        {
            "type": "pwa-node",
            "request": "attach",
            "name": "Attach to Backend (Auto Attach)",
            "port": 9229,
            "restart": true,
            "localRoot": "${workspaceFolder}",
            "remoteRoot": null
        }
    ],
    "compounds": [
        {
            "name": "Dev: Full Stack (Client + Backend)",
            "configurations": ["Launch Backend (tsx)", "Launch Client (Vite + Chrome)"]
        }
    ]
}